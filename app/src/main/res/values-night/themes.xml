<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KampalaCleanToilets" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky_blue_dark</item>
        <item name="colorPrimaryVariant">#9D454545</item>
        <item name="colorOnPrimary">#9B000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#AA014D6F</item>
        <item name="colorSecondaryVariant">#0277BD</item>
        <item name="colorOnSecondary">#BC000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.KampalaCleanToilets.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KampalaCleanToilets.NavHeader">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="splashTheme" parent="Theme.KampalaCleanToilets.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background_dark</item>
    </style>


    <style name="Theme.KampalaCleanToilets.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KampalaCleanToilets.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
</resources>